@model List<TravelModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Lista podróży</h2>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Nazwa )
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DataRozpoczecia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DataZakonczenia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].MiejscePoczatkowe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].MiejsceKoncowe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Uczestnicy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Przewodnik)
        </th>

        <th>
            @Html.DisplayNameFor(model => model[0].Priority)
        </th>
    </tr>
    @foreach (var item in @Model)
    {
                <tr>
                    <td>
                @item.Nazwa
                    </td>
                    <td>
                @item.DataRozpoczecia.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                @item.DataZakonczenia.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                @item.MiejscePoczatkowe
                    </td>
                    <td>
                @item.MiejsceKoncowe
                    </td>
                    <td>
                @string.Join(", ", item.Uczestnicy)
                    </td>
                    <td>
                @item.Przewodnik
                    </td>
                    <td>
                        <a class="btn btn-primary" 
                           asp-action="Edit" 
                           asp-controller="Travel" 
                           asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-info" 
                           asp-action="Details" 
                           asp-controller="Travel" 
                           asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-danger" 
                           asp-action="Delete" 
                           asp-controller="Travel" 
                           asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
    }
</table>
