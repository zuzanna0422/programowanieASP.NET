@model Dictionary<int, TravelModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Lista podróży</h2>
<table>
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Data rozpoczęcia
        </th>
        <th>
            Data zakończenia
        </th>
        <th>
            Miejsce początkowe
        </th>
        <th>
            Miejsce końcowe
        </th>
        <th>
            Uczestnicy
        </th>
        <th>
            Przewodnik
        </th>
    </tr>
    @foreach (var item in @Model)
    {
            <tr>
                <td>
                    @item.Value.Nazwa
                </td>
                <td>
                    @item.Value.DataRozpoczecia.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.Value.DataZakonczenia.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.Value.MiejscePoczatkowe
                </td>
                <td>
                    @item.Value.MiejsceKoncowe
                </td>
                <td>
                    @string.Join(", ", item.Value.Uczestnicy)
                </td>
                <td>
                    @item.Value.Przewodnik
                </td>
                <td>
                    <a class="btn btn-primary" 
                       asp-action="Edit" 
                       asp-controller="Travel" 
                       asp-route-id="@item.Key">Edytuj</a>
                    <a class="btn btn-info" 
                       asp-action="Details" 
                       asp-controller="Travel" 
                       asp-route-id="@item.Key">Szczegóły</a>
                    <a class="btn btn-danger" 
                       asp-action="Delete" 
                       asp-controller="Travel" 
                       asp-route-id="@item.Key">Usuń</a>
                </td>
            </tr>
    }
</table>
